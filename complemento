#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
void main()
{int N,Z=1,c,r,i;
 cout <<"Ingrese un numero: "<< endl;
 cin >>N;
 i=N;
 while(i>0)
 {r=i%10;
  Z=Z*10+r;
  i=i/10;
 }
 if(Z==N)
	 cout<<"Es capicua"<< endl;
 else
	 cout <<"No es capicua"<<endl;
 _getch();
}
